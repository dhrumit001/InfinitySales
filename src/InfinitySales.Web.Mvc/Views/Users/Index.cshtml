@using Abp.Authorization.Users
@using InfinitySales.Web.Startup
@model InfinitySales.Web.Models.Users.UserListViewModel
@{
    ViewBag.CurrentPageName = PageNames.Users; // The menu item will be active for this page.
}
@section scripts
    {
    <environment names="Development">
        <script>
            requirejs(['knockout','userIndex', 'addEditUserModel'], function (ko,userIndex, addEditUserModel) {
                 @*ko.applyBindings(new addEditUserModel(@Html.Raw(Json.Serialize(Model.Roles))), $("#UserAddEditModal")[0]);*@
            })
        </script>
    </environment>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("Users")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <div id="gridContainer"></div>
                
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right add-user" data-toggle="modal">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_AddEditUserModal")
