@using Abp.Authorization.Users
@using Abp.MultiTenancy
@model InfinitySales.Web.Models.Account.ResetPasswordViewModel
@{
    ViewBag.DisableTopBar = true;
}
@section Styles
    {
    <environment names="Development">
        <link rel="stylesheet" href="~/view-resources/Views/Account/Login.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/view-resources/Views/Account/Login.min.css" asp-append-version="true" />
    </environment>
}
@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Account/ResetPassword.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Account/ResetPassword.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="card" id="﻿ResetPasswordArea">
    <div class="body">
        <form id="ResetPasswordForm" asp-action="ResetPassword" method="post">
            <h4 class="text-center">@L("ResetPassword")</h4>
            @Html.HiddenFor(model => model.Code)
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="email" class="form-control" name="UsernameOrEmailAddress"  required maxlength="@AbpUserBase.MaxEmailAddressLength">
                    <label class="form-label">@L("UsernameOrEmailAddress")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="password" class="form-control" name="Password" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                    <label class="form-label">@L("NewPassword")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="password" class="form-control" name="ConfirmPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                    <label class="form-label">@L("ConfirmPassword")</label>
                </div>
            </div>


            <div class="row">
                <div class="col-xs-12">
                    <a asp-action="ForgotPassword" class="btn btn-default waves-effect">@L("Back")</a>
                    <button id="ResetPasswordButton" class="btn bg-pink waves-effect" type="submit">@L("ResetPasswordButton")</button>
                </div>
            </div>
        </form>
    </div>
</div>
